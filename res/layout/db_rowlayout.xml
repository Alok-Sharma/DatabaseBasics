  <TextView android:id="@+id/rownum" android:textAppearance="?android:attr/textAppearanceLarge"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentRight="true" ></TextView>
  <TextView android:layout_height="wrap_content" android:id="@+id/rowcollg" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"></TextView>
    
